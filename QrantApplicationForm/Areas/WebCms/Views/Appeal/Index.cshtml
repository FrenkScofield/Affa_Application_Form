@model IEnumerable<QrantApplicationForm.Models.BLL.ApplicationForm>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/WebCms/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12 my-4">
        <div class="card shadow mb-4">
            <div class="card-header py-4">
               Appeals
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-shorting" id="dataTable">
                        <thead>
                            <tr>
                                <th style="width: 50px;">Num</th>
                                <th style="width: 210px;">Ad, Soyad və Ata adı</th>
                                <th style="width: 140px;">Əlaqə nömrəsi</th>
                                <th style="width: 120px;">Email</th>
                                <th style="width: 280px;">Müraciət edənin adı, soyadı və ata adı</th>
                                <th style="width: 100px;">Etrafli</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr data-id="@item.Id">

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NameSurnameFatherName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AppNameSurane)
                                    </td>
                                   
                                    <td>
                                        <a asp-action="MoreDetailed" asp-route-id="@item.Id" class="btn text-primary"><img src="https://img.icons8.com/officexs/30/000000/details-pane.png"/></a>

                                    </td>
                                </tr>
                             
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/main.js"></script>

}

